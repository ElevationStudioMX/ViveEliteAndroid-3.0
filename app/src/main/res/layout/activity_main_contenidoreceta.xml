<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_contenidoreceta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.example.desarrollo_elevation.viveelite.MainActivity_contenidoreceta">



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbareceta"
                app:theme="@style/Theme.AppCompat"
                android:background="@drawable/backgraund"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:minHeight="?attr/actionBarSize"
                tools:ignore="UnusedAttribute"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="0dp"

                >

                <Button
                    android:text="R E C E T A S"
                    android:drawableLeft="@mipmap/imgreceta"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"

                    android:textColor="#ff7cbd"

                    android:id="@+id/btncontenidoreceta" />

                <ImageButton
                    android:text=""
                    android:background="@mipmap/favoritos"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginLeft="20dp"
                    android:layout_x="276dp"
                    android:layout_y="67dp"
                    android:id="@+id/btnfavoritosreceta" />

                <Button
                    android:text=""
                    android:background="@mipmap/flecha2"
                    android:layout_width="41dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_x="318dp"
                    android:layout_y="58dp"
                    android:id="@+id/btncompartirreceta" />


            </LinearLayout>


            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"



                android:id="@+id/txtTitulo"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/imgrecetas"

                />



            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:textColor="#5b6065"
                android:layout_y="453dp"
                android:id="@+id/txtsutitulo"
                android:layout_x="1dp"

                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recicleviweringredientes"
                android:visibility="invisible"


                />

            <TextView
                android:text="Preparación:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:textColor="#5b6065"
                android:layout_y="453dp"
                android:id="@+id/txtPreparacion"
                android:layout_x="1dp"
                android:visibility="invisible"
                />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom= "@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"


                android:paddingTop="@dimen/activity_vertical_margin"
                android:visibility="visible"

                android:text=""

                android:textColor="#5b6065" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtduraciones"
                    android:visibility="invisible"
                android:text="Duración:  "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtduraciontiemp"
                    android:text="30 minutos"
                    android:visibility="invisible"

                    />



            </LinearLayout>





        </LinearLayout>












    </AbsoluteLayout>

    </android.support.v4.widget.NestedScrollView>


</AbsoluteLayout>
