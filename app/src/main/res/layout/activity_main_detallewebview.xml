<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_detallewebview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.desarrollo_elevation.viveelite.MainActivity_detallewebview"
    android:weightSum="1">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarweb"
        android:title="Recetas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        tools:ignore="UnusedAttribute"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="18dp"
        android:layout_y="16dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="vertical"
        android:id="@+id/layerweb"

       android:layout_marginTop="19dp"
        android:layout_below="@+id/toolbarweb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_x="5dp"
        android:layout_y="78dp"
        android:layout_weight="0.23" />

    <WebView
        android:layout_below="@+id/layerweb"
        android:layout_width="346dp"
        android:layout_height="203dp"
        android:layout_weight="0.53"
        android:id="@+id/wevb"
        ></WebView>

</LinearLayout>
