<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main__favoritos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.desarrollo_elevation.viveelite.MainActivity_Favoritos">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/recyclerViewerfavoritos"

        android:layout_below="@+id/toolbarejercicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_y="60dp" />
</AbsoluteLayout>
</android.support.v4.widget.NestedScrollView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarfavoritos"
        android:title="Favoritos"
        app:theme="@style/Theme.AppCompat"
        android:background="@drawable/backgraund"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:minHeight="?attr/actionBarSize"
        tools:ignore="UnusedAttribute"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:id="@+id/texto_favorito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_y="239dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"

         />


</AbsoluteLayout>
