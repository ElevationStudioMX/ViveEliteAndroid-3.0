<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_detalle_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.desarrollo_elevation.viveelite.MainActivity_detalle_video_tam">


    <AbsoluteLayout
        android:id="@+id/videoLayoutyoutube"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <!-- View that will be shown while the fullscreen video loads. For example you could include
        a "Loading..." message. However, in this particular example this view is actually defined in
        view_loading_video.xml and inflated programmatically in ExampleActivity.java. The reason for
        this is to keep the main layout (this file) cleaner. -->
        <!-- <View
            android:id="@+id/videoLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" /> -->




        <AbsoluteLayout
            android:id="@+id/nonVideoLayoutyoutube"
            android:layout_width="match_parent"
            android:layout_height="220dp"

            android:layout_y="56dp"
            >

            <com.example.desarrollo_elevation.VideoEnabledWebView
                android:id="@+id/weberyoutube"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </AbsoluteLayout>


    </AbsoluteLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_y="280dp"
        android:textColor="#000"
        android:id="@+id/scrollViewyt"
        >


        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:id="@+id/txtdetallevideoyt"
            />
    </ScrollView>
    <android.support.v7.widget.Toolbar

        android:text="tolbar"
        android:title="mi libro luna de puton"
        android:titleTextColor="#FFF"
        android:background="#800000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/toolbardetallevideos" />


</AbsoluteLayout>


